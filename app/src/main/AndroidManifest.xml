<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.sunflower.mydemo"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.TabHostDemoActivity"
            android:label="@string/title_activity_tab_host_demo"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.activity.DrawerLayoutDemoActivity"/>
        <activity
            android:name=".ui.activity.BitmapCompressDemoActivity"
            android:label="@string/title_activity_bitmap_compress_demo"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.activity.ViewPagerDemoActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.activity.VolleyDemoActivity">
        </activity>
        <activity
            android:name=".ui.activity.MaterialDesignDemoActivity"
            android:label="@string/title_activity_material_design_demo"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ui.activity.ServiceDemoActivity">
        </activity>

        <service
            android:name=".service.MyService"
            android:enabled="true"
            android:exported="true">
        </service>
        <activity android:name=".ui.activity.FloatViewActivity">
        </activity>
    </application>

</manifest>
